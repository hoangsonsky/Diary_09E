<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vn.itplus.sonhv.diary_09e.WriteFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imgIcon"
            android:src="@drawable/iconn4"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edt_title"
            android:hint="@string/title"
            android:singleLine="true"
            android:scrollbars="horizontal"
            android:textColor="#d855f2"
            android:layout_margin="5dp"
            android:textSize="25dp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:id="@+id/tv_location"
        android:singleLine="true"
        android:scrollHorizontally="true"
        android:layout_below="@id/ll"
        />
    <EditText
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edt_write"
        android:hint="@string/content"
        android:gravity="top"
        android:scrollbars="vertical"
        android:maxLines="10"
        android:lines="10"
        android:layout_below="@id/tv_location"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/ll_tool"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_alignParentBottom="true"
        >
        <ImageView
            android:id="@+id/imv_keybroad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/keyboard"
            android:layout_weight="1"
            android:layout_margin="10dp"
            />
        <ImageView
            android:id="@+id/imv_takephoto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/takephoto"
            android:layout_weight="1"
            android:layout_margin="10dp"
            />
        <ImageView
            android:id="@+id/imv_picture"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/picture"
            android:layout_weight="1"
            android:layout_margin="10dp"
            />
        <ImageView
            android:id="@+id/imv_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/location"
            android:layout_weight="1"
            android:layout_margin="10dp"
            />
        <ImageView
            android:id="@+id/imv_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/icon"
            android:layout_weight="1"
            android:layout_margin="10dp"
            />
        <ImageView
            android:id="@+id/imv_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/share"
            android:layout_weight="1"
            android:layout_margin="10dp"
            />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Save"
            android:background="@drawable/color_for_button_number"
            android:layout_weight="4"
            />
    </LinearLayout>
    <Button
        android:id="@+id/btn_Edit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/round_button"
        android:text="Edit"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal"
        android:layout_below="@id/edt_write"
        android:layout_above="@id/ll_tool"/>

</RelativeLayout>
